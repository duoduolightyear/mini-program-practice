.index_swiper {
  width: 750rpx;
  height: 340rpx;
}
.index_swiper .swiper_image {
  width: 100%;
}
.index_category {
  display: flex;
}
.index_category .category_nav {
  flex: 1;
  padding: 20rpx;
}
.index_category .category_nav .category_image {
  width: 100%;
}
.index_floor .floor_group .floor_title {
  padding: 10rpx 0;
}
.index_floor .floor_group .floor_title .title_image {
  width: 100%;
}
.index_floor .floor_group .floor_content {
  overflow: hidden;
}
.index_floor .floor_group .floor_content .floor_nav {
  float: left;
  width: 33.33%;
}
.index_floor .floor_group .floor_content .floor_nav:nth-last-child(-n+4) {
  height: 27.72711207vw;
  border-left: 10rpx solid #fff;
}
.index_floor .floor_group .floor_content .floor_nav:nth-child(2),
.index_floor .floor_group .floor_content .floor_nav:nth-child(3) {
  border-bottom: 10px solid #fff;
}
.index_floor .floor_group .floor_content .content_image {
  width: 100%;
  height: 100%;
}

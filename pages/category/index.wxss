page {
  height: 100%;
}
.category {
  height: 100%;
}
.category .cat_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.category .cat_container .menu {
  flex: 2;
}
.category .cat_container .menu .menu_item {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
}
.category .cat_container .menu .active {
  color: var(--themeColor);
  border-left: 5px solid currentColor;
}
.category .cat_container .products {
  flex: 5;
}
.category .cat_container .products .products_group .products_title {
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.category .cat_container .products .products_group .products_title .slash {
  color: #ccc;
  padding: 0 10rpx;
}
.category .cat_container .products .products_group .products_content {
  display: flex;
  flex-wrap: wrap;
}
.category .cat_container .products .products_group .products_content .products_nav {
  width: 33.33%;
  text-align: center;
}
.category .cat_container .products .products_group .products_content .products_nav .products_image {
  width: 50%;
}
